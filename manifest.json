{

    "manifest_version": 2,
    "name": "Wave",
    "version": "1.0",
    "homepage_url": "https://github.com/Anorak2/Wave",
    "description": "Allows payment to websites you use.",
  
    "icons": {
      "48": "icons/border-48.png"
    },
  
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],

"content_security_policy": "script-src 'self'",
    "browser_action":{
      "default_icon":{
        "19":"iconsmall.png",
        "48":"iconsmall.png"
      },
      "default_popup":"popup/popup.html"
     },
    "permissions":[
        "tabs",
        "storage"
    ] 
  }
  